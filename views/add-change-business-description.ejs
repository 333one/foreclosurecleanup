    <main>

        <div class="narrowWidthVanish -thinLineShadowBorder -topBottomMarginLarge">

            <% if (typeof normalize != "undefined") { %>

            <p class="dashboard__headline">Address Normalization</p>
            <p class="dashboard__subText -rightLeftMarginMedium">If the top address is accurate we recommend that you normalize your company's address to the format used by the US Postal Service.</p>
            <div class="addressNormalizationBox -rightLeftMarginMedium">
                <p class="addressNormalization -topMarginMedium"><%= normalize.uspsStreet %><% if (normalize.uspsStreetTwo != "") { %>, <%= normalize.uspsStreetTwo %><% } %></p>
                <p class="addressNormalization -bottomMarginMedium"><%= normalize.uspsCity %>, <%= normalize.uspsState %> <%= normalize.uspsZip %></p>

                <form action="/add-change-business-address" method="POST">
                    <div class="-bottomMarginMedium -rightLeftMarginMedium">
                        <button class="uspsFormat__button">Use US Postal Service format</button>
                    </div>
                    <input type="hidden" name="businessStreet" value="<%= normalize.uspsStreet %>">
                    <input type="hidden" name="businessStreetTwo" value="<%= normalize.uspsStreetTwo %>">
                    <input type="hidden" name="businessCity" value="<%= normalize.uspsCity %>">
                    <input type="hidden" name="businessState" value="<%= normalize.uspsState %>">
                    <input type="hidden" name="businessZip" value="<%= normalize.uspsZip %>">
                </form> 

            </div>

            <div class="addressNormalizationBox -rightLeftMarginMedium">
