<!DOCTYPE html>
<html lang="en">
<head>
    <title>Log In To Your Account On Foreclosure Cleanup Account</title>
    <%- include('includes/head-boilerplate.ejs') %>

    <script defer src="js/password-toggle.js"></script>
    <script defer src="js/connect/login-password-toggle.js"></script>

    <script>
        let patternCurrentEmail = <%- patternCurrentEmail %>;
        let patternCurrentPassword = <%- patternCurrentPassword %>;
    </script>
    <script defer src="js/character-blocker.js"></script>
    <script defer src="js/connect/login-character-blocker.js"></script>
</head>
<body>

    <%- include('includes/narrow-screen-top-boilerplate.ejs') %>

                <h3 class="headlineLarge -centerAlign -bottomMarginMedium">Log In To Your Account</h3>

                <p class="textSmall -centerAlign -bottomMarginMedium">Need to register an account? Click <a href="/register" class="tertiaryLink">here</a>.</p>

                    <form action="/login" method="POST">

                        <div class="input__unit -bottomMarginMedium"> 
                            <label for="currentEmail" class="input__label">Email Address:</label>
                            <input id="currentEmail" class="input__field
                                <% if (typeof currentEmailError != "undefined") { %>
                                    -errorBorder
                                <% } %>
                                    " name="currentEmail" <%= emailAttributes %> value="<%= userInput.currentEmail %>" autofocus>
                            <% if (typeof currentEmailError != "undefined") { %>
                            <div class="input__error"><%= currentEmailError %></div>
                            <% } %> 
                        </div>

                        <div class="input__unit -bottomMarginLarge"> 
                            <label for="currentPassword" class="input__label">Password:</label>
                            <div class="password__container 
                            <% if (typeof currentPasswordError != "undefined") { %>
                                -errorBorder
                            <% } %>
                            ">
                                <input id="currentPassword" class="input__passwordField" name="currentPassword" <%= passwordAttributes %> value="<%= userInput.currentPassword %>">
                                <div class="password__toggle"><img id="currentPasswordEye" src="images/eye-slash-solid.svg" alt="show / hide password"></div>
                            </div>
                            <% if (typeof currentPasswordError != "undefined") { %>
                            <div class="input__error"><%= currentPasswordError %></div>
                            <% } %> 
                        </div>

                        <div class="-bottomMarginLarge">
                            <button id="narrowScreen__button">Log In</button>
                        </div>  

                    </form> 

                <p class="textMedium -centerAlign -bottomMarginLarge"><a href="/password-reset-request">I forgot my password</a>.</p>

    <%- include('includes/narrow-screen-bottom-boilerplate.ejs') %>

</body>
</html>